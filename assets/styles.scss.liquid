/* Product list - collections */

.product-list {
  .thumbnail {
    @include respond-to('min-medium') {
      &.one-third.thumbnail:nth-of-type(3n+1),
      &.four.thumbnail:nth-of-type(4n+1) {
        clear: left;
      }
    }
  }
}

.product-list .thumbnail,
.slider-gallery .thumbnail,
.list-collections .thumbnail {
  position: relative;
  text-align: center;
  margin-bottom: 25px;
  display: block;
  .thumbnail-overlay {
    background-color: {{ settings.product_hover_bg_color | color_modify: 'alpha', 0.5 }};
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    opacity: 0;
    overflow: hidden;
    transition: opacity 0.3s ease-in;
    > a {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
    }
    @include respond-to('medium'){
      display: none;
    }
    @include respond-to('min-xlarge'){
      line-height: 1.5;
    }
  }
  {% if settings.banner_style == 'round' %}
    .thumbnail_banner {
      border-radius: 50%;
      width: 70px;
      height: 70px;
      line-height: 70px;
      padding: 0;
      position: relative;
      top: 10px;
      right: 10px;
      white-space: nowrap;

      @include respond-to('medium'){
        top: 5px;
        right: 5px;
        width: 50px;
        height: 50px;
        line-height: 50px;
      }
    }
  {% endif %}
  img {
    width: 100%;
    vertical-align: top;
    transition: opacity .3s ease-in;
  }
  .product-info__caption {
    {% if settings.thumbnail_hover_enabled == false %}
      display: block;
    {% endif %}
    margin-top: 20px;
    @include respond-to('tablet'){
      display: block;
    }
  }
}

@include respond-to('tablet'){
  .touchevents {
    .product-info__caption {
      display: block;
    }
    .thumbnail-overlay {
      display: none;
    }
  }
}

