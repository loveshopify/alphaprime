@mixin respond-to($breakpoint) {
  @if $breakpoint == "small" {
    @media all and (max-width: $small - 1px) {
      @content;
    }
  }

  @else if $breakpoint == "min-small" {
    @media all and (min-width: $small) {
      @content;
    }
  }

  @else if $breakpoint == "mobile" {
    @media all and (max-width: $medium - 1px) {
      @content;
    }
  }

  @else if $breakpoint == "medium" {
    @media all and (max-width: $medium - 1px) {
      @content;
    }
  }

  @else if $breakpoint == "min-medium" {
    @media all and (min-width: $medium) {
      @content;
    }
  }
  
  @else if $breakpoint == "tablet" {
    @media all and (max-width: $large - 1px) {
      @content;
    }
  }

  @else if $breakpoint == "large" {
    @media all and (max-width: $large - 1px) {
      @content;
    }
  }

  @else if $breakpoint == "min-large" {
    @media all and (min-width: $large) {
      @content;
    }
  }
  
  @else if $breakpoint == "large-tablet" {
    @media all and (max-width: $xlarge - 1px) {
      @content;
    }
  }

  @else if $breakpoint == "xlarge" {
    @media all and (max-width: $xlarge - 1px) {
      @content;
    }
  }

  @else if $breakpoint == "min-xlarge" {
    @media all and (min-width: $xlarge) {
      @content;
    }
  }
  
  @else if $breakpoint == "min-xxlarge" {
    @media all and (min-width: $xxlarge) {
      @content;
    }
  }

  @else if $breakpoint == "ie10+" {
    @media all and (-ms-high-contrast: none), (-ms-high-contrast: active) {
      @content;
    }
  }
  
  @else {
    @media all and ($breakpoint) {
      @content;
    }
  }
}

/*
  Prefix mixin for generating vendor prefixes.
  Based on https://github.com/thoughtbot/bourbon/blob/v4-stable/app/assets/stylesheets/addons/_prefixer.scss

  Usage:
    // Input:
    .element {
      @include prefix(transform, scale(1), ms webkit spec);
    }

    // Output:
    .element {
      -ms-transform: scale(1);
      -webkit-transform: scale(1);
      transform: scale(1);
    }
*/
@mixin prefix($property, $value, $prefixes) {
  @each $prefix in $prefixes {
    @if $prefix == webkit {
      -webkit-#{$property}: $value;
    } @else if $prefix == moz {
      -moz-#{$property}: $value;
    } @else if $prefix == ms {
      -ms-#{$property}: $value;
    } @else if $prefix == o {
      -o-#{$property}: $value;
    } @else if $prefix == spec {
      #{$property}: $value;
    } @else  {
      @warn 'Unrecognized prefix: #{$prefix}';
    }
  }
}

