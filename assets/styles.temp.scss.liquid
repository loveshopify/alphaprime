// end Shogun app

.swatch .swatch-element {
	margin: 0px 0px 8px 0;
}
#chat-widget-container {
    bottom: 52px !important;
    right: 0px !important;
}
.smile-launcher-frame-container {
    bottom: 4px !important;
    right: 7px !important;
}
@media (max-width: 798px) {
    div.breadcrumb-collection {
        margin-top: -15px !important;
    }
}

.sticky_nav--stick {
    box-shadow: 0px 0px 60px rgba(0, 0, 0, 0.1) !important;
    background: rgba(255, 255, 255, 0.75) !important;
}
.index .footer, .collection .footer, .product-alternate .footer, .product .footer {
    border-top: none;
}
@media only screen and (min-width: 1200px) {
    .shopify-reviews {
        padding: 30px 138px;
    }
}
.article_content span {
    font-size: 15px;
    letter-spacing: 0.5px;
    line-height: 30px;
    color: #474545;
}
.article_content h2 span, .article_content h3 span {
    font-weight: 700 !important;
    font-size: 22px;
}
.swym-add-to-wishlist.swym-iconbtnlink:after {
    line-height: 45px !important;
}
.swym-button-bar {
    margin: 40px -5px 0px -5px !important;
}
#swym-plugin #swym-notification, #swym-hosted-plugin #swym-notification {
    bottom: 90px !important;
}
.index .caption-content .action_button {
    display: inline !important;
    padding: 10px 20px !important;
}
#pre-order {
    padding: 0px 30px !important;
    font-weight: 500 !important;
    margin-right: 10px !important;
    font-size: 14px !important;
}
#subscribe-remodal .subscribe-content .subscribe-form input[type="text"], #subscribe-remodal .subscribe-content .subscribe-form input[type="email"] {
    color: black !important;
}
#styled-instagram-feed .fs-wrapper {
    text-align: -webkit-center;
}
.main_nav, .dropdown {
    background: rgba(255,255,255,0.97);
}
.dropdown_container.mega-menu .dropdown {
    box-shadow: 0px 21px 30px rgba(0, 0, 0, 0.05);
}
.sale_banner, .new_banner, .preorder_banner {
    font-size: 12px;
    padding: 2px 10px;
}
.relative.product_image {
    border: 1px solid #ebebeb;
}
.slideshow_animation--fade .gallery-cell.is-selected {
    border: 1px solid #ebebeb;
}
.modal_price {
    font-size: 12px;
}
.headline, .empty_cart, .promo_banner, .title {
    letter-spacing: 1px;
}
.search_form input, .search_form input:active, .search_form input:focus {
    background-color: #ececec;
    border-color: #ececec;
}
.okeReviews .okeReviews-reviewsTab {
    top: 40% !important;
    z-index: 900 !important;
}
.page-contact-us #shopify-section-gallery {
    display: none;
}
.page-contact-us .container.main.content {
    min-height: 600px;
}
div.logo .primary_logo {
    max-width: 250px !important;
    margin-bottom: 0px;
    margin-top: 6px;
}
@media (min-width: 798px) {
    .page-about-us .container.main p {
        padding: 20px 190px;
        font-size: 15px;
    }
}
.page-about-us h1 {
	text-align: center !important;
    font-weight: bold;
}

