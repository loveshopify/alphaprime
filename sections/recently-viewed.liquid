{% comment %}
** Recently viewed - homepage partial **
- Draggable section
{% endcomment %}

<div  class="js-recently-viewed hidden recently-viewed__section"
      data-visible-products="{{ section.settings.rv_max_display }}"
  >
  <div class="container bottom-fix">
    <div class="related-products__title {% unless section.settings.rv_products_style == 'slider' %}sixteen columns{% endunless %}">
      <h2 class="title center">{{ section.settings.rv_title }}</h2>
      <div class="feature_divider"></div>
    </div>
  </div>

  {% assign limit = section.settings.rv_max_display %}
  {% assign loop_limit = section.settings.rv_max_display | minus: 1 %}


  {% if section.settings.rv_products_style == 'slider' %}
    {% assign visible_products = section.settings.rv_per %}

    <div class="rv-main js-rv-slider slider-gallery products-slider products-length-{{ section.settings.rv_per }}"
          data-products-per-slide="{{ visible_products }}"
          data-products-limit="{{ limit }}"
          >
      
      
       {% comment %}
      {% for rvProducts in (0..loop_limit) %}
{% assign pro_index ='' %}
  {% for op in rvProducts.options %}
    {% assign op_handle = op | downcase %}
     {% if op_handle contains 'color' or op_handle contains 'colour' %}
        {% assign pro_index = forloop.index0 %}
     {% endif %}
  {% endfor %}
{% assign number = 0 %}
{% assign variant_url = '' %}
{% assign variant_image = '' %}
{% if pro_index != '' %}
   {% assign pro_values = '' %}
   {% assign pro_numvalues = '' %}
   {% assign pro_option_index = pro_index %}
  {% for product_vari in rvProducts.variants %}
    {% assign pro_value = product_vari.options[pro_index] %}
    {% assign pro_numvalue = product_vari.options[pro_option_index] %}
      {% unless pro_values contains pro_value %}  
          {% assign pro_values = pro_values | join: ',' %}
          {% assign pro_values = pro_values | append: ',' | append: pro_value %}
          {% assign pro_values = pro_values | split: ',' %}
          {% assign pro_numvalues = pro_numvalues | join: ',' %}
          {% assign pro_numvalues = pro_numvalues | append: ',' | append: pro_numvalues %}
          {% assign pro_numvalues = pro_numvalues | split: ',' %}
             {% assign variant_url = product_vari.url %}
             {% assign variant_image = product_vari.image.src %}
             <div class="gallery-cell thumbnail rv-box-element rv-box-{{ number }} rv-element">
          <!--Products are dynamically inserted-->
        </div>
        {% assign number = number | plus:1 %}
      {% endunless %}
  {% endfor %}
{% else %}
    <div class="gallery-cell thumbnail rv-box-element rv-box-{{ number }} rv-element">
          <!--Products are dynamically inserted-->
        </div>
         {% assign number = number | plus:1 %}
{% endif %}
      {% endfor %}
      
      {% endcomment %}
      
         {% for rvProducts in (0..loop_limit) %}
        <div class="gallery-cell thumbnail rv-box-element rv-box-{{ rvProducts }} rv-element">
          <!--Products are dynamically inserted-->
        </div>
      {% endfor %}
      
      
      
    </div>

  {% else %}
    {% assign products_per_row = section.settings.rv_per %}

    {% unless sidebar %}<div class="container related-products--grid">{% endunless %}
      <div class="sixteen columns">
        <div class="rv-main js-rv-grid clearfix product-list collection-matrix"
          data-products-per-slide="{{ section.settings.rv_per }}"
          data-products-limit="{{ limit }}">
          {% for rvProducts in (0..loop_limit) %}
            <div class="thumbnail rv-box-element rv-box-{{ rvProducts }} rv-element
            {% if products_per_row == 3 %}
              one-third column {% cycle 'alpha', '', 'omega' %}
            {% elsif products_per_row == 4 %}
              four columns {% cycle 'alpha', '', '', 'omega' %}
            {% elsif products_per_row == 5 %}
              one-fifth column {% cycle 'alpha', '', '', '', 'omega' %}
            {% endif %}">
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Recently viewed products",
  "class": "recently-viewed",
  "settings": [
    {
      "type": "paragraph",
      "content": "To test the recently viewed products, view your online store outside of the Editor and visit multiple product pages ([?](https:\/\/help.outofthesandbox.com\/hc\/en-us\/articles\/115008765228))"
    },
    {
      "type": "text",
      "id": "rv_title",
      "label": "Title",
      "default": "Recently viewed products"
    },
    {
      "type": "radio",
      "id": "rv_products_style",
      "label": "Layout",
      "default": "grid",
      "options": [
        {
          "value": "slider",
          "label": "Slider"
        },
        {
          "value": "grid",
          "label": "Grid"
        }
      ]
    },
    {
      "type": "range",
      "id": "rv_max_display",
      "label": "Products limit",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "range",
      "id": "rv_per",
      "label": "Products per row",
      "min": 3,
      "max": 5,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [{
    "name": "Recently viewed products",
    "category": "Product"
  }]
}
{% endschema %}

